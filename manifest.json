{
"manifest_version": 2,
    "name": "joey-fy",
    "description": "The extension uses a thesaurus on every word on a webpage, to help you reach Joey Tribbiani's level of eloquence.",
    "version": "1.0",
    
  "background" : {
    "scripts" : [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
  },
  
  "browser_action": {
  "default_icon": "icon.png"},
  
  "permissions": ["activeTab"]
}
        
  
