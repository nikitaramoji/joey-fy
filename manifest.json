{
"manifest_version": 2,
    "name": "[your extension name here]",
    "description": "[your extension description here]",
    "version": "1.0",
        
   "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html" },
    
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
